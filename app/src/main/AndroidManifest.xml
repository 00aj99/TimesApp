<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.addie.maxfocus">

    <!-- Permissions needed to access current app in use -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".ui.AppsActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".ui.DialogActivity"
            android:theme="@style/Theme.Transparent" />

        <receiver
            android:name=".receiver.AppDialogBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.addie.maxfocus.service.action.APP_DIALOG" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AlarmActivity" />
        <activity android:name=".ui.StudyTimerActivity" />
        <provider
            android:exported="false"
            android:authorities="${applicationId}"
            android:name=".data.generated.AppProvider"/>

    </application>

</manifest>